<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:MtgLibraryUI"
             x:Class="MtgLibraryUI.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Dark"/>
    </Application.Styles>

    <Application.Resources>
        <Color x:Key="PrimaryBarColor">#FF2F2F2F</Color>
        <Color x:Key="SecondaryBarColor">#FF383838</Color>
        <Color x:Key="WindowBackgroundColor">#FF404040</Color>
        <Color x:Key="ButtonColor">#FF454545</Color>
        <Color x:Key="ButtonHighlightColor">#FF8F8F8F</Color>

        <LinearGradientBrush x:Key="BackgroundGradient">
            <GradientStops>
                <GradientStop Color="{StaticResource SecondaryBarColor}" Offset="0"/>
                <GradientStop Color="Black" Offset="1"/>
            </GradientStops>
        </LinearGradientBrush>
    </Application.Resources>
</Application>
